<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_account_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:layoutDirection="rtl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.leon.moshtarak.activities.SignAccountActivity"
    tools:ignore="UnusedAttribute">

    <include layout="@layout/footer" />

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayoutFooter"
        android:layout_below="@id/linearLayoutHeader"
        android:layout_marginLeft="@dimen/activity_large_margin"
        android:layout_marginRight="@dimen/activity_large_margin"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/linearLayoutTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_mid_margin"
            android:layout_marginRight="@dimen/activity_mid_margin"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutAccounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:gravity="center"
                    android:text="@string/active_user_"
                    android:textSize="@dimen/textSizeSmall" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerAccounts"
                    style="?android:attr/spinnerDropDownItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_padding"
                    android:background="@drawable/border_blue_2"
                    android:gravity="center"
                    android:padding="@dimen/activity_mid_padding"
                    android:popupBackground="@drawable/border_blue_white_background"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/register_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/buttonContinue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:layout_weight="1"
                        android:background="@drawable/border_yellow_3"
                        android:text="@string/change_account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeSmall"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/buttonLogOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:layout_weight="1"
                        android:background="@drawable/border_red_"
                        android:text="@string/logout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeSmall"
                        tools:ignore="ButtonStyle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_padding"
                android:orientation="horizontal"
                android:padding="@dimen/activity_mid_padding"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageViewAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_padding"
                    android:src="@drawable/img_plus_1"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_padding"
                    android:text="@string/add_account" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextBillId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/border_gray_4"
                    android:gravity="center"
                    android:hint="@string/bill_id"
                    android:inputType="number"
                    android:maxLength="13"
                    android:paddingTop="@dimen/activity_medium_padding"
                    android:paddingBottom="@dimen/activity_medium_padding"
                    android:textSize="@dimen/textSizeMedium"
                    tools:ignore="Autofill" />

                <LinearLayout
                    android:id="@+id/linearLayoutMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/border_gray_4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_gray_4"
                        android:gravity="center"
                        android:hint="@string/mobile_number"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="9"
                        android:paddingTop="@dimen/activity_mid_padding"
                        android:paddingBottom="@dimen/activity_mid_padding"
                        android:textSize="@dimen/textSizeMedium"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_mid_margin"
                        android:layout_marginEnd="@dimen/activity_mid_margin"
                        android:text="@string/_09"
                        android:textSize="@dimen/textSizeMedium" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/border_green_2"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:text="@string/Why_We_Ask_For_This_Information"
                    android:textColor="@color/blue5" />
            </LinearLayout>
        </LinearLayout>
        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:foreground="?android:attr/selectableItemBackground"-->
        <!--            app:cardCornerRadius="10dp"-->
        <!--            app:cardElevation="3sp"-->
        <!--            app:cardUseCompatPadding="true">-->
        <!--        </androidx.cardview.widget.CardView>-->
    </ScrollView>
</RelativeLayout>
