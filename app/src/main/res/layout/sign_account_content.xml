            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:padding="@dimen/activity_mid_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/img_text_header"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_mid_margin"
        android:background="@drawable/border_gray_"
        android:orientation="vertical"
        android:padding="@dimen/activity_mid_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_mid_margin"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:layout_marginRight="@dimen/activity_mid_margin"
            android:gravity="start"
            android:text="@string/dear_user"
            android:textColor="@color/red1"
            android:textSize="@dimen/textSizeSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/activity_mid_margin"
            android:layout_marginRight="@dimen/activity_mid_margin"
            android:gravity="right"
            android:text="@string/input_message"
            android:textSize="@dimen/textSizeSmall"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
    <ScrollView
