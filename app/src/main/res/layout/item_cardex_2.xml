<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray_1"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:weightSum="4"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:layout_marginEnd="@dimen/activity_mid_margin"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/blue2"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewUseM3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:layout_marginEnd="@dimen/activity_mid_margin"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/orange2"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:layout_marginEnd="@dimen/activity_mid_margin"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/green2"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_mid_margin"
            android:layout_marginEnd="@dimen/activity_mid_margin"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/pink2"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/imageViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/cash_payment2"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>