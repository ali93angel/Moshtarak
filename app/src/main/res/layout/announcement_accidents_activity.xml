<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".activities.AnnouncementAccidentsActivity"
    tools:ignore="UnusedAttribute">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اعلام حوادث آب و فاضلاب"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/activity_mid_margin"
            android:padding="@dimen/activity_mid_padding"
            android:src="@drawable/accident_icon"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </androidx.appcompat.widget.Toolbar>

    <include layout="@layout/header" />

    <include layout="@layout/footer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayoutFooter"
        android:layout_below="@id/toolbar1"
        android:layout_margin="@dimen/activity_large_padding"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_border_gray_3"
                android:orientation="vertical"
                android:padding="@dimen/activity_large_padding"
                tools:ignore="UselessLeaf">

                <LinearLayout
                    android:id="@+id/linearLayoutMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/new_border_white_1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/_000000000"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="9"
                        android:padding="@dimen/activity_mid_padding"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_mid_margin"
                        android:text="@string/_09"
                        android:textSize="@dimen/textSizeMedium"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_mid_margin"
                    android:layout_marginBottom="@dimen/activity_mid_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_mid_padding"
                    android:paddingBottom="@dimen/activity_mid_padding">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حادثه آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حادثه فاضلاب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="افت فشار یا قطعی آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="موارد مربوط به کیفیت آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_padding"
                    android:layout_marginTop="@dimen/activity_mid_margin"
                    android:layout_marginRight="@dimen/activity_medium_padding"
                    android:layout_marginBottom="@dimen/activity_mid_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_mid_padding"
                    android:paddingBottom="@dimen/activity_mid_padding">

                    <RadioButton
                        android:id="@+id/radioButton11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حادثه در داخل منزل می باشد"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حادثه در خارج از منزل می باشد"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_padding"
                    android:layout_marginTop="@dimen/activity_mid_margin"
                    android:layout_marginRight="@dimen/activity_medium_padding"
                    android:layout_marginBottom="@dimen/activity_mid_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_mid_padding"
                    android:paddingBottom="@dimen/activity_mid_padding">

                    <RadioButton
                        android:id="@+id/radioButton21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شکستگی یا مفقودی دریچه منهول فاضلاب (داخل خیابان یا کوچه)"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="احساس بوی نامطبوع شبکه فاضلاب در خیابان یا کوچه"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="گرفتگی و پس زدگی سیفون فاضلاب در منزل"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_medium_padding"
                    android:layout_marginTop="@dimen/activity_mid_margin"
                    android:layout_marginRight="@dimen/activity_medium_padding"
                    android:layout_marginBottom="@dimen/activity_mid_margin"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_mid_padding"
                    android:paddingBottom="@dimen/activity_mid_padding">

                    <RadioButton
                        android:id="@+id/radioButton41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تغییر در طعم و بوی آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تغییر در رنگ آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton43"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="میزان کلر بالا در آب"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textViewMessage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:gravity="right"
                    android:padding="@dimen/activity_mid_padding"
                    android:text="آیا با بستن شیر فلکه کنتور، نشتی شما رفع می گردد؟"
                    android:textColor="@color/green2"
                    tools:ignore="RtlHardcoded" />

                <RadioGroup
                    android:id="@+id/radioGroup111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_medium_padding"
                    android:layout_marginTop="@dimen/activity_mid_margin"
                    android:layout_marginRight="@dimen/activity_medium_padding"
                    android:layout_marginBottom="@dimen/activity_mid_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/activity_mid_padding"
                    android:paddingBottom="@dimen/activity_mid_padding">

                    <RadioButton
                        android:id="@+id/radioButton111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خیر"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton112"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بله"
                        android:textColor="@color/color_5"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textViewMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/new_border_white_1"
                    android:gravity="right"
                    android:padding="@dimen/activity_mid_padding"
                    android:textColor="@color/yellow1"
                    android:textSize="@dimen/textSizeMedium"
                    tools:ignore="RtlHardcoded" />

                <org.osmdroid.views.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/border_gray_2"
                    android:padding="@dimen/activity_mid_padding" />

                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_mid_margin"
                    android:background="@drawable/new_border_green_1"
                    android:text="ثبت حادثه"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeMedium" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>