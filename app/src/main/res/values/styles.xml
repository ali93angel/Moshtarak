<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="background">@drawable/img_background</item>
        <item name="android:windowBackground">@drawable/img_background</item>
    </style>

    <style name="bottomView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/footer</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButton</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:fontFamily">@font/my_font</item>
    </style>

    <style name="OverFlowButton">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@drawable/img_background</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:background">@color/blue1</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_default">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewDialog" parent="Theme.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/text_color2</item>
    </style>
    //TODO از اینجا

    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/TextStyle</item>
    </style>


    <style name="AppThemeMaterial.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeMaterial.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButton</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:fontFamily">@font/my_font</item>
    </style>

    <style name="AppThemeMaterial.NoActionBar">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="textAppearanceButton">@style/TextStyle</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
    </style>
</resources>
