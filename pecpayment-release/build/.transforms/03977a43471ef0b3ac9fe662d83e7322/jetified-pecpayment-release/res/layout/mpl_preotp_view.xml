<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@drawable/card_information_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.top.lib.mpl.view.PersianFontTextView
        android:id="@+id/dialog_content"
        android:text="@string/harimInform2"
        android:textColor="@color/grey"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/dismissBtn"
            android:background="@drawable/mpl_harimcancel_bg"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="45dp">
            <com.top.lib.mpl.view.PersianFontTextView
                android:layout_centerInParent="true"
                android:textColor="@color/pec_blue"
                android:text="نیازی ندارم"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:id="@+id/submitBtn"
            android:background="@drawable/mpl_harimbtn_bg"
            android:layout_width="wrap_content"

            android:layout_height="45dp">
            <com.top.lib.mpl.view.PersianFontTextView
                android:id="@+id/submitTxt"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/md_white_1000"
                android:text="درخواست رمز پویا"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>